<style is:global>
    :root {
        --purple: #a259ec;
        --bg: #fff;
        --text: #222;
        --grey: #888;
        --icon-size: 1.4rem;
    }

    html,
    body {
        height: 100%;
        margin: 0;
        padding: 0;
        background: var(--bg);
        color: var(--text);
        font-family: 'Roboto', 'Inter', 'PingFang SC', 'Segoe UI', Arial, sans-serif;
        font-weight: 600;
        min-height: 100vh;
        transition: background .3s, color .3s;
    }

    body {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100vh;
        min-height: 100vh;
        background: var(--bg);
        transition: background .3s, color .3s;
        position: relative;
        visibility: hidden; 
    }

    .avatar {
        width: 140px;
        height: 140px;
        border-radius: 50%;
        overflow: hidden;
        box-shadow: 0 4px 20px #f1ebff;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #fff;
        margin-bottom: 28px;
        transition: background .3s, box-shadow .3s;
    }

    .avatar img {
        width: 90%;
        height: 90%;
        border-radius: 50%;
    }

    .nickname {
        font-size: 2.3rem;
        font-weight: bold;
        margin-bottom: 18px;
        letter-spacing: .02em;
    }

    .icons {
        margin-bottom: 28px;
    }

    .icons a {
        margin: 0 10px;
        color: var(--grey);
        font-size: var(--icon-size);
        text-decoration: none;
        transition: color .2s;
        vertical-align: middle;
    }

    .icons a:hover {
        color: var(--purple);
    }

    .links {
        font-size: 1.08rem;
        color: #555;
        margin-bottom: 4px;
    }

    .links a {
        color: #555;
        margin: 0 7px;
        text-decoration: none;
        position: relative;
        transition: color .18s;
    }

    .links a:hover {
        color: var(--purple);
    }        

    .theme-toggle {
        position: absolute;
        top: 24px;
        right: 36px;
        cursor: pointer;
        background: transparent;
        border: none;
        outline: none;
        font-size: 1.6rem;
        color: var(--purple);
        transition: color .25s, background .3s;
        z-index: 10;
        padding: 4px 7px;
        border-radius: 50%;
        box-shadow: 0 1px 8px 0 rgba(162, 89, 236, .05);
        user-select: none;
    }

    .icons a svg {
        opacity: 0.52;
        transition: opacity 0.2s, color 0.18s;
        color: var(--grey);
    }

    .icons a:hover svg {
        opacity: 1;
        color: var(--purple);
    }

    html.dark .icons a svg {
        color: #b5aed6;
    }

    html.dark .icons a:hover svg {
        color: var(--purple);
    }

    .theme-toggle:hover {
        background: rgba(162, 89, 236, .10);
    }

    @media (max-width: 600px) {
        .avatar {
            width: 90px;
            height: 90px;
        }

        .nickname {
            font-size: 1.3rem;
        }

        .icons a {
            font-size: 1.1rem;
        }

        .links {
            font-size: 0.98rem;
        }

        .theme-toggle {
            top: 10px;
            right: 10px;
            font-size: 1.3rem;
        }
    }

    html.dark {
        --bg: #070615;
        --text: #f7f7fc;
        --grey: #a6a6c1;
    }

    html.dark body {
        background: var(--bg);
        color: var(--text);
    }

    html.dark .avatar {
        background: #232340;
        box-shadow: 0 4px 24px #292958;
    }

    html.dark .nickname {
        color: var(--text);
    }

    html.dark .links,
    html.dark .links a {
        color: #b5aed6;
    }

    html.dark .icons a {
        color: #b5aed6;
    }

    html.dark .icons a:hover {
        color: var(--purple);
    }

    html.dark .theme-toggle {
        color: #b5aed6;
    }

    .lang-toggle {
        position: absolute;
        top: 24px;
        right: 100px;
        cursor: pointer;
        background: transparent;
        border: none;
        outline: none;
        font-size: 1.6rem;
        color: var(--purple);
        transition: color .25s, background .3s;
        z-index: 10;
        padding: 4px 7px;
        border-radius: 50%;
        box-shadow: 0 1px 8px 0 rgba(162, 89, 236, .05);
        user-select: none;
    }

    .lang-icon {
        display: inline-block;
        transition: transform .3s;
    }

    .lang-toggle:hover {
        background: rgba(162, 89, 236, .10);
    }

    @media (max-width: 600px) {
        .lang-toggle {
            top: 10px;
            right: 70px;
            font-size: 1.3rem;
        }
    }
    html.no-transition,
    html.no-transition * {
      transition: none !important;
    }
    body.theme-loaded {
      visibility: visible;
    }
    html.no-transition,
    html.no-transition * {
      transition: none !important;
    }

    body.lang-not-loaded {
      visibility: hidden;
    }

    body.lang-loaded {
      visibility: visible;
    }
</style>